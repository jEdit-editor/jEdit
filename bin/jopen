#!/bin/sh

if test "$JAVA" = ""
then
    JAVA="jre"
fi

if test "$JEDIT_HOME" = ""
then
    JEDIT_HOME=/opt/slava/share/jedit-1.0.1
fi

JOPEN="-portfile=$HOME/.jedit-server-`echo $DISPLAY|sed 's/\..*//'`"

for a in "$@"
do
    if ja=`expr "$a" : '-J\(..*\)'`
    then 
	JOPEN_J="$JOPEN_J $ja"
    else 
	JOPEN="$JOPEN $a"
    fi
done

CLASSPATH="$JEDIT_HOME/jedit.jar:$CLASSPATH"
export CLASSPATH
JOPEN_J="$JOPEN_J jOpen"

exec $JAVA $JOPEN_J $JOPEN
