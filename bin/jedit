#!/bin/sh

if [ "$JAVA" = "" ]
then
    JAVA="jre"
fi

if [ "$JEDIT_HOME" = "" ]
then
    JEDIT_HOME=/opt/slava/share/jedit-1.0pre1
fi

JEDIT="-portfile=$HOME/.jedit-server-$DISPLAY"

for a in "$@"
do
    if ja=`expr "$a" : '-J\(..*\)'`
    then 
	JEDIT_J="$JEDIT_J $ja"
    else 
	JEDIT="$JEDIT $a"
    fi
done

export CLASSPATH="$JEDIT_HOME/jedit.jar:$CLASSPATH"
export JEDIT_J="-Djedit.home=$JEDIT_HOME $JEDIT_J jEdit"

exec $JAVA $JEDIT_J $JEDIT
