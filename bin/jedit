#!/bin/sh

if test "$JAVA" = ""
then
    JAVA="jre"
fi

if test "$JEDIT_HOME" = ""
then
    JEDIT_HOME=/opt/slava/share/jedit-1.0.1
fi

JEDIT="-portfile=$HOME/.jedit-server-`echo $DISPLAY|sed 's/\..*//'`"

for a in "$@"
do
    if ja=`expr "$a" : '-J\(..*\)'`
    then 
	JEDIT_J="$JEDIT_J $ja"
    else 
	JEDIT="$JEDIT $a"
    fi
done

CLASSPATH="$JEDIT_HOME/jedit.jar:$CLASSPATH"
export CLASSPATH
JEDIT_J="-Djedit.home=$JEDIT_HOME $JEDIT_J jEdit"

exec $JAVA $JEDIT_J $JEDIT
