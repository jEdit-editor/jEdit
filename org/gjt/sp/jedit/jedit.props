###
### jEdit global properties
### By Slava Pestov <sp@gjt.org>
###

###
### GLOBAL SETTINGS
###

# Look and feel class
#lf=com.sun.java.swing.plaf.motif.MotifLookAndFeel
#lf=com.sun.java.swing.plaf.windows.WindowsLookAndFeel
lf=javax.swing.plaf.metal.MetalLookAndFeel

# Server control
server=on

# Autosave interval in seconds, 0=off
autosave=15

# Number of recent files
recent=8

# Maximum number of elements in a history list
history=25

# Name for untitled files, {0} is the number open so far
untitled=Untitled-{0}

# Desktop saving toggle
saveDesktop=on

# Number of backups to make, 0=no backups
backups=1

# Backup directory
backup.directory=

# Backup filename prefix and suffix
backup.prefix=
backup.suffix=~

###
### BUFFER SETTINGS
### These can also be specified as buffer-local properties
###

# Line separator
# The OS default will be used if this is not specified
# Unix=\n
# Windows=\r\n
# MacOS=\r
#buffer.lineSeparator=\n

# Tab width
buffer.tabSize=8

# Auto indent
buffer.indentOnTab=on
buffer.indentOnEnter=off

# Brackets
buffer.openBrackets=([{
buffer.closeBrackets=)]}

# Default edit mode
buffer.defaultMode=text

# Maximum line length (for Format command)
buffer.maxLineLen=72

# Non-alphabet characters that count as word characters anyway
# (for Expand Abbreviation command)
buffer.noWordSep=

# Print margins (these cannot be set on a per-buffer basis currently.
# Not much point fixing this though)
buffer.margin.top=0.5
buffer.margin.left=0.5
buffer.margin.bottom=0.5
buffer.margin.right=0.5

# Syntax colorizing
buffer.syntax=on

# Syntax colors
buffer.colors.comment1=red
buffer.colors.comment2=#990033
buffer.colors.keyword1=blue
buffer.colors.keyword2=magenta
buffer.colors.keyword3=#009600
buffer.colors.label=#cc32ff
buffer.colors.literal1=#650099
buffer.colors.literal2=#650099
buffer.colors.operator=#808080
buffer.colors.invalid=#ff9900

###
### VIEW SETTINGS
###

# Show hints/tips? (on/off)
view.showTips=on

# Show toolbar? (on/off)
view.showToolbar=on

# Show full path in title bar? (on/off)
view.showFullPath=off

# Font
view.font=Monospaced
view.fontsize=14
# 0=plain, 1=bold, 2=italic, 3=boldItalic
view.fontstyle=0

# Background and foreground colors (for the text area)
view.bgColor=white
view.fgColor=black

# Line highlighting
view.lineHighlight=on
view.lineHighlightColor=#e0e0e0

# Bracket highlighting
view.bracketHighlight=on
view.bracketHighlightColor=#ffaaaa

# Caret color
view.caretColor=red

# Selection color
view.selectionColor=#ccccff

# Caret blink rate
view.caretBlinkRate=500

# Block caret
view.blockCaret=off

# Electric borders
view.electricBorders=3

###
### CONSOLE SETTINGS
###

# Info message color
console.infoColor=#009600

# Error message color
console.errorColor=red

# Parsed error color
console.parsedErrorColor=magenta

###
### EDIT MODES
###

# Text mode
mode.text.name=Text

# AMSTeX mode
mode.amstex.name=AMS-TeX
mode.amstex.blockComment=%
mode.amstex.compiler=amstex $f

# Batch File mode
mode.bat.name=Batch File
mode.bat.blockComment=rem
mode.extension.bat=bat

# C mode
mode.c.name=C
mode.c.noWordSep=_
mode.c.indentOpenBrackets={
mode.c.indentCloseBrackets=}
mode.c.commentStart=/*
mode.c.commentEnd=*/
mode.c.blockComment=//
mode.c.boxComment=\ *
mode.c.compiler=cc -O $f
mode.extension.c=c
mode.extension.h=c

# C++ mode
mode.cc.name=C++
mode.cc.noWordSep=_
mode.cc.indentOpenBrackets={
mode.cc.indentCloseBrackets=}
mode.cc.commentStart=/*
mode.cc.commentEnd=*/
mode.cc.blockComment=//
mode.cc.boxComment=\ *
mode.cc.compiler=c++ -O2 $f
# I wish the C++ file extensions were more standard... jeez...
mode.extension.cc=cc
mode.extension.hh=cc
mode.extension.cpp=cc
mode.extension.cxx=cc

# HTML mode
mode.html.name=HTML
mode.html.commentStart=<!--
mode.html.commentEnd=-->
mode.extension.html=html
mode.extension.shtml=html
mode.extension.htm=html

# Java mode
mode.java.name=Java
mode.java.noWordSep=_
mode.java.indentOpenBrackets={
mode.java.indentCloseBrackets=}
mode.java.commentStart=/*
mode.java.commentEnd=*/
mode.java.blockComment=//
mode.java.boxComment=\ *
mode.java.compiler=javac $f
mode.extension.java=java
mode.extension.sqlj=java

# JavaScript mode
mode.javascript.name=JavaScript
mode.javascript.noWordSep=_
mode.javascript.indentOpenBrackets={
mode.javascript.indentCloseBrackets=}
mode.javascript.commentStart=/*
mode.javascript.commentEnd=*/
mode.javascript.blockComment=//
mode.javascript.boxComment=\ *
mode.extension.js=javascript

# LaTeX mode
mode.latex.name=LaTeX
mode.latex.blockComment=%
mode.latex.compiler=latex $f

# Makefile mode
mode.makefile.name=Makefile
mode.makefile.blockComment=#
mode.makefile.compiler=make -C $d -f $f
mode.filename.gnumakefile=makefile
mode.filename.makefile=makefile

# Patch mode
mode.patch.name=Patch/DIFF
mode.extension.diff=patch
mode.extension.patch=patch

# Props mode
mode.props.name=Properties/INI
mode.patch.blockComment=#
mode.extension.props=props
mode.extension.properties=props
mode.extension.ini=props
mode.extension.kdelnk=props
mode.extension.reg=props
mode.filename.properties=props
mode.filename.config.sys=props
mode.filename..jedit-props=props

# Shell script mode
mode.sh.name=Shell Script
mode.sh.blockComment=#
mode.extension.sh=sh
mode.extension.csh=sh
mode.firstline.#!/bin/sh=sh
mode.firstline.#!/bin/ash=sh
mode.firstline.#!/usr/local/bin/ash=sh
mode.firstline.#!/bin/bash=sh
mode.firstline.#!/usr/local/bin/bash=sh
mode.firstline.#!/bin/zsh=sh
mode.firstline.#!/usr/local/bin/zsh=sh
mode.firstline.#!/bin/ksh=sh
mode.firstline.#!/usr/local/bin/ksh=sh
mode.firstline.#!/bin/csh=sh
mode.firstline.#!/usr/local/bin/csh=sh
mode.firstline.#!/bin/tcsh=sh
mode.firstline.#!/usr/local/bin/tcsh=sh

# TeX mode
mode.tex.name=TeX
mode.tex.blockComment=%
mode.tex.compiler=tex $f
mode.extension.tex=tex
mode.extension.sty=tex
mode.extension.aux=tex

# Transact-SQL mode (written by Mike Dillon <mdillon@uclink4.berkeley.edu>)
mode.tsql.name=Transact-SQL
mode.extension.sql=tsql
mode.tsql.commentStart=/*
mode.tsql.commentEnd=*/
mode.tsql.blockComment=--
mode.tsql.boxComment=**
