###
### jEdit global properties
### By Slava Pestov <sp@gjt.org>
###

# Look and feel class
#lf=com.sun.java.swing.plaf.motif.MotifLookAndFeel
#lf=com.sun.java.swing.plaf.windows.WindowsLookAndFeel
lf=javax.swing.plaf.metal.MetalLookAndFeel

# Server control
server=on

# Autosave interval in seconds, 0=off
autosave=15

# Number of recent files
recent=8

# Number of elements in clipboard history (used by Paste Previous command)
clipHistory=100

# Name for untitled files, {0} is the number open so far
untitled=Untitled-{0}

# Desktop saving toggle
saveDesktop=on

# Number of backups to make, 0=no backups
backups=1

# Default WWW browser
browser=jedit_moz_remote

###
### BUFFER SETTINGS
###

# Line separator
# The OS default will be used if this is not specified
# Unix=\n
# Windows=\r\n
# MacOS=\r
#buffer.line.separator=\n

# Tab width
buffer.tabSize=8

# Brackets
buffer.openBrackets=([{
buffer.closeBrackets=)]}

# Print margins
buffer.margin.top=0.5
buffer.margin.left=0.5
buffer.margin.bottom=0.5
buffer.margin.right=0.5

# Syntax colorizing
buffer.syntax=on

# `Make' tool
buffer.make=make

# Colors
buffer.colors.comment1=red
buffer.colors.comment2=#990033
buffer.colors.keyword1=blue
buffer.colors.keyword2=magenta
buffer.colors.keyword3=green
buffer.colors.label=#8888ff
buffer.colors.literal1=gray
buffer.colors.literal2=gray
buffer.colors.operator1=orange
buffer.colors.operator2=darkGray

###
### VIEW SETTINGS
###

# Show hints/tips? (on/off)
view.showTips=on

# Geometry
view.geometry.w=80
view.geometry.h=25

# Font
view.font=Monospaced
view.fontsize=14
# 0=plain, 1=bold, 2=italic, 3=boldItalic
view.fontstyle=0

# Background and foreground colors
view.bgColor=white
view.fgColor=black

# Line highlighting
view.lineHighlight=on
view.lineHighlightColor=#e0e0e0

# Bracket highlighting
view.bracketHighlight=on
view.bracketHighlightColor=#ffaaaa

# Caret color
view.caretColor=red

# Selection color
view.selectionColor=#ccccff

# Caret blink rate
view.caretBlinkRate=500

# Block caret
view.blockCaret=on

# Electric borders
view.electricBorders=4

# Auto indent
view.autoindent=on

